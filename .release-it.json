{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}"
  },
  "github": {
    "release": false
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "before:init": ["npm run health-check"],
    "after:bump": ["npm run format"],
    "before:git:tag": ["npm run deps:sync", "git add package-lock.json"],
    "before:release": ["git add -A"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md",
      "header": "# Changelog\n\n",
      "strictSemVer": true,
      "context": {
        "linkCompare": true,
        "linkReferences": true
      },
      "gitRawCommitsOpts": {
        "format": "%B%n-hash-%n%H%n-gitTags-%n%d%n-committerDate-%n%ci%n-authorName-%n%an%n-authorEmail-%n%ae"
      },
      "writerOpts": {
        "commitsSort": ["scope", "type"]
      }
    }
  }
}