# Runlintic App Env Example File
# Environment variables for Runlintic Release it Package
# Copy this file to .env and fill in your actual values
#
# GITHUB_REPO_OWNER=https://github.com/mj163
# GITHUB_REPO_NAME=https://github.com/R-Dolce-Group/runlintic-app.git
# GITHUB_REPO_ORGANIZATION: https://github.com/R-Dolce-Group
# ----------------------------------------------------------------------------- #


# -----------------------------------------------------------------------------
# Local Development Apps Config
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# -----------------------------------------------------------------------------
# Github (REQUIRED FOR RELEASES)
# -----------------------------------------------------------------------------
# GitHub token for releases - GET FROM: https://github.com/settings/tokens
# Required scopes: repo, write:packages

GH_TOKEN=test_github_token_abc123
GITHUB_TOKEN=test_github_token_abc123
GH_URL=https://github.com/R-Dolce-Group/runlintic-app.git
GH_SSH=git@github.com:R-Dolce-Group/runlintic-app.git

# -----------------------------------------------------------------------------
# Release conventions
# -----------------------------------------------------------------------------
# Optional: Custom release configuration
# RELEASE_VERSION_PREFIX=v
# RELEASE_BRANCH=main

# Release settings
# Set to 'true' to enforce clean working directory before release
RELEASE_REQUIRE_CLEAN_WORKING_DIR=true

# -----------------------------------------------------------------------------
# Release Management (Optional: NPM Publishing)
# -----------------------------------------------------------------------------
# Optional: NPM token if publishing to NPM registry
# NPM_TOKEN=your_npm_token_here
# NPM_ACCESS_TOKEN=your_npm_token_here

